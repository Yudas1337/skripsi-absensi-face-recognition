<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.MainActivity">

    <data>
        <import type="android.view.View"/>
        <variable
            name="result"
            type="com.yudas1337.recognizeface.DetectionResult" />
    </data>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/face_position_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_clock_main"
                    android:text='Posisikan Wajah ke Dalam Frame'
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/face_position_text"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/time_bg"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text='Melakukan Pemindaian.. '
                    android:textColor="#ffffff"
                    android:textSize="17sp" />
            </RelativeLayout>

        </LinearLayout>

        <com.yudas1337.recognizeface.detection.FaceBoxOverlay
            android:id="@+id/graphic_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="142dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:visibility="@{result.hasFace ? View.VISIBLE : View.GONE}"
            android:background="@{result.confidence >= result.threshold ? @drawable/result_real_face_shape : @drawable/result_fake_face_shape}"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:drawableStart="@{result.confidence >= result.threshold ? @drawable/success_icon : @drawable/fail_icon}"
                android:drawablePadding="20dp"
                android:text='@{result.confidence >= result.threshold ? @string/real_face : @string/fake_face}'
                android:textColor="@{result.confidence >= result.threshold ? @color/real_face_color : @color/fake_face_color}"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:text="@string/author_name" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/settings"
            android:onClick="setting"/>

    </RelativeLayout>
</layout>
